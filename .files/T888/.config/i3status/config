# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "ipv6"
order += "wireless wlp3s0"
order += "wireless wlan0"
order += "ethernet eth0"
order += "ethernet enp13s0"
order += "ethernet enp60s0"
order += "ethernet enp0s20u1"
order += "ethernet enp0s20u2"
order += "disk /"
order += "load"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless wlp3s0 {
        format_up = "W: (%quality on %essid, %bitrate) %ip"
        format_down = ""
}

wireless wlan0 {
        format_up = "W: (%quality on %essid, %bitrate) %ip"
        format_down = ""
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
	format_down = ""
}

ethernet enp13s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "D: %ip (%speed)"
	format_down = ""
}

ethernet enp60s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "T: %ip (%speed)"
	format_down = ""
}

ethernet enp0s20u1 {
        # if you use %speed, i3status requires root privileges
        format_up = "U‚ÇÅ: %ip (%speed)"
	format_down = ""
}

ethernet enp0s20u2 {
        # if you use %speed, i3status requires root privileges
        format_up = "U‚ÇÇ: %ip (%speed)"
	format_down = ""
}

battery 0 {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

volume master {
	format = "ùÖ†: %volume"
	format_muted = "ùÑΩ: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
